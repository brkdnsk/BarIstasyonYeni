@model Baristasyon.Application.Dtos.LoginUserDto
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-coffee text-white">
                <h4 class="mb-0">
                    <i class="fa-solid fa-right-to-bracket me-1"></i> Giriş Yap
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">📧 Email</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@baristasyon.com" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">🔑 Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa-solid fa-sign-in-alt me-1"></i> Giriş Yap
                        </button>
                    </div>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-4">@ViewBag.Error</div>
                }

                <div class="text-center mt-4 small">
                    Hesabınız yok mu? <a href="/User/Register" class="text-coffee fw-semibold">Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-coffee {
        background-color: #6f4e37;
    }

    .text-coffee {
        color: #6f4e37;
    }

    input:focus {
        border-color: #6f4e37;
        box-shadow: 0 0 0 0.15rem rgba(111, 78, 55, 0.25);
    }

    .btn-success {
        background-color: #4b2e2e;
        border-color: #4b2e2e;
    }

        .btn-success:hover {
            background-color: #3a2424;
            border-color: #3a2424;
        }
</style>
