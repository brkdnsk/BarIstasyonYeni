@model List<Baristasyon.Application.Dtos.ResultCoffeeRecipeDto>
@{
    ViewData["Title"] = "Kahve Tarifleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fa-solid fa-mug-hot me-2 text-warning"></i>Kahve Tarifleri
    </h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus me-1"></i> Yeni Tarif Ekle
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100 recipe-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold text-coffee">
                        <i class="fa-solid fa-mug-saucer me-1"></i> @item.Title
                    </h5>

                    <p class="card-text text-muted">@item.Description</p>

                    <p class="mb-1"><strong>Demleme:</strong> <span class="badge bg-secondary">@item.Method</span></p>
                    <p class="mb-1"><strong>Süre:</strong> <i class="fa-regular fa-clock me-1"></i>@item.BrewTime dakika</p>

                    <a href="#" class="btn btn-sm btn-outline-coffee mt-auto">Detay</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .text-coffee {
        color: #6f4e37;
    }

    .btn-outline-coffee {
        border-color: #6f4e37;
        color: #6f4e37;
    }

        .btn-outline-coffee:hover {
            background-color: #6f4e37;
            color: white;
        }

    .recipe-card {
        transition: transform 0.2s ease, box-shadow 0.3s ease;
        border-left: 4px solid #6f4e37;
    }

        .recipe-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
        }
</style>
