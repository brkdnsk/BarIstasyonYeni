<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Baristasyon</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        /* Kahverengi tema */
        .bg-coffee {
            background-color: #4b2e2e;
        }

        .navbar .nav-link {
            transition: color 0.3s ease;
        }

        .navbar .nav-link:hover {
            color: #f4d06f;
            text-decoration: underline;
        }

        footer {
            background-color: #f8f9fa;
            color: #888;
        }

        .card {
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        a {
            text-decoration: none;
        }
    </style>
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-coffee shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">☕ Baristasyon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/CoffeeRecipe"><i class="fa-solid fa-mug-hot me-1"></i>Tarifler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Equipment"><i class="fa-solid fa-gears me-1"></i>Ekipmanlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/JobPost"><i class="fa-solid fa-briefcase me-1"></i>İş İlanları</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/Login"><i class="fa-solid fa-right-to-bracket me-1"></i>Giriş</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/Register"><i class="fa-solid fa-user-plus me-1"></i>Kayıt Ol</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="text-center py-3 border-top small">
        <span>© @DateTime.Now.Year Baristasyon — Kahveyle Kodlayanların Mekânı ☕</span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
