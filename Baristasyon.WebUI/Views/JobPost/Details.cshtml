@model Baristasyon.Application.Dtos.ResultJobPostDto
@{
    ViewData["Title"] = "İlan Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg job-detail-card">
            <div class="card-header bg-gradient text-white d-flex justify-content-between align-items-center py-3 px-4"
                 style="background: linear-gradient(90deg, #0d6efd, #6610f2);">
                <h4 class="mb-0">
                    <i class="fa-solid fa-briefcase me-2"></i> @Model.Title
                </h4>
                <span class="badge bg-light text-dark">@Model.PostedAt.ToString("dd MMM yyyy")</span>
            </div>

            <div class="card-body px-4 py-4">
                <p class="text-muted fs-5">@Model.Description</p>

                <ul class="list-group mb-4 shadow-sm">
                    <li class="list-group-item py-3"><strong>🏢 Firma:</strong> @Model.CompanyName</li>
                    <li class="list-group-item py-3"><strong>📍 Lokasyon:</strong> @Model.Location</li>
                    <li class="list-group-item py-3"><strong>📧 İletişim:</strong> <a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a></li>
                </ul>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                    </a>

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white me-2 shadow-sm">
                            <i class="fa-solid fa-pen me-1"></i> Düzenle
                        </a>

                        <form asp-action="Delete" method="post" asp-route-id="@Model.Id" class="d-inline"
                              onsubmit="return confirm('Bu ilanı silmek istediğinizden emin misiniz?');">
                            <button type="submit" class="btn btn-danger shadow-sm">
                                <i class="fa-solid fa-trash me-1"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .job-detail-card {
        border-radius: 14px;
        transition: box-shadow 0.3s ease-in-out;
    }

        .job-detail-card:hover {
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.15);
        }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .list-group-item {
        font-size: 1rem;
        border-left: 4px solid #0d6efd;
    }
</style>
