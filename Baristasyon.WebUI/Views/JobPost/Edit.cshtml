@model Baristasyon.Application.Dtos.UpdateJobPostDto
@{
    ViewData["Title"] = "İlanı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="fa-solid fa-pen me-1"></i> İlanı Düzenle</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompanyName" class="form-label">Firma Adı</label>
                        <input asp-for="CompanyName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label">Konum</label>
                        <input asp-for="Location" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactEmail" class="form-label">İletişim Email</label>
                        <input asp-for="ContactEmail" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
                        </a>

                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-save me-1"></i> Kaydet
                        </button>
                    </div>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

        .btn-success:hover {
            background-color: #157347;
            border-color: #157347;
        }
</style>
