@using Baristasyon.Application.Dtos
@model List<ResultJobPostDto>
@{
    ViewData["Title"] = "İş İlanları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fa-solid fa-briefcase me-2 text-primary"></i>İş İlanları
    </h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa fa-plus me-1"></i> Yeni İlan Ekle
    </a>
</div>

<div class="row">
    @foreach (var job in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card job-card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold text-primary">
                        <i class="fa-solid fa-building me-1"></i> @job.Title
                    </h5>

                    <p class="text-muted">@job.Description.Substring(0, Math.Min(100, job.Description.Length))...</p>

                    <div class="mt-auto">
                        <p class="mb-1"><span class="badge bg-info text-dark">🏢 @job.CompanyName</span></p>
                        <p class="mb-1"><span class="badge bg-secondary">📍 @job.Location</span></p>
                        <p class="mb-2 text-muted small">📅 @job.PostedAt.ToString("dd MMM yyyy")</p>

                        <a href="@Url.Action("Details", "JobPost", new { id = job.Id })" class="btn btn-sm btn-outline-primary w-100">
                            <i class="fa fa-eye me-1"></i> Detay
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .job-card {
        transition: all 0.2s ease-in-out;
        border-left: 4px solid #0d6efd;
        border-radius: 0.75rem;
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }

    .badge {
        font-size: 0.85rem;
    }
</style>
